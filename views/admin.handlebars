<script src="/js/moment.min.js"></script>
<script src="/js/locale/id.js"></script>
<script src="/js/bootstrap-datetimepicker.js"></script>

<script type="text/javascript">
    //tambah user
    $('#tambah_user').on('submit', function(e) {
        e.preventDefault();
        if($('#password').val().length < 6){
            generalAlert('Password minimal 6 karakter.');
            return false;
        }
        $.ajax({
            url : $(this).attr('action'),
            type: "POST",
            data: $(this).serialize(),
            success: function (data) {
                if(data == 'existed'){
                    generalAlert('Pengguna sudah ada.');
                } else{
                    generalAlert('Pengguna berhasil dibuat.');
                    if($('#jenis_user').val() == '1'){
                        $('#adm_table > tbody:last-child').append('<tr><td class="username">'+$('#username').val()+'</td><td></td><td></td><td id="'+data+'" class="text-center"><button type="button" class="edit" data-toggle="modal" data-target="#editModal"><i class="icon-pencil"></i></button> <button type="button" class="del"><i class="icon-user-unfollow"></i></button> <button type="button" class="track"><i class="fa fa-history fa-lg"></i></button></td></tr>');
                    } else{
                        $('#editor_table > tbody:last-child').append('<tr><td class="username">'+$('#username').val()+'</td><td></td><td></td><td id="'+data+'" class="text-center"><button type="button" class="edit" data-toggle="modal" data-target="#editModal"><i class="icon-pencil"></i></button> <button type="button" class="del"><i class="icon-user-unfollow"></i></button> <button type="button" class="track"><i class="fa fa-history fa-lg"></i></button></td></tr>');
                    }
                    $('#tambah_user')[0].reset();
                }
            },
            error: function (jXHR, textStatus, errorThrown) {
                generalAlert('Jaringan dalam gangguan. Harap hubungi admin.');
            }
        });
    });

    //edit user
    var row_editing;
    var row_editing_jenis_now;
    $('table').on('click', '.edit', function () {
        row_editing = $(this).closest('tr');
        if($(this).closest('table').attr('id') == 'adm_table'){
            row_editing_jenis_now = 1;
            $('#jenis_user_edit').val(1);
        }else {
            row_editing_jenis_now = 0;
            $('#jenis_user_edit').val(0);
        }
        var target = $(this).closest('tr');
        $('#edit_user').attr('action', '/admin/edit/'+$(this).closest('td').attr('id'))
        $('#username_edit').val(target.children('td.username').text());
        $('#password_edit').val('');
    })
    $('#edit_user').on('submit', function(e) {
        e.preventDefault();
        if($('#password_edit').val() && $('#password_edit').val().length < 6){
            generalAlert('Password minimal 6 karakter.');
            return false;
        }
        $.ajax({
            url : $(this).attr('action'),
            type: "POST",
            data: $(this).serialize(),
            success: function (data) {
                $('#editModal').modal('toggle');
                if($('#jenis_user_edit').val() != row_editing_jenis_now){
                    if($('#jenis_user_edit').val() == 0){
                        $('#editor_table > tbody:last-child').append(row_editing)
                    } else {
                        $('#adm_table > tbody:last-child').append(row_editing)
                    }
                }
                generalAlert('Pengguna berhasil diedit.');
            },
            error: function (jXHR, textStatus, errorThrown) {
                generalAlert('Jaringan dalam gangguan. Harap hubungi admin.');
            }
        });
    });

    //hapus user
    var target_delete;
    var target;
    $('table').on('click', '.del', function () {
        if(target_delete){
            $.ajax({
                url: '/admin/hapus_user/'+target.closest('td').attr('id'),
                type: 'DELETE',
                success: function(data) {
                    generalAlert(data);
                    target_delete.remove()
                },
                error: function (jXHR, textStatus, errorThrown) {
                    generalAlert('Jaringan dalam gangguan. Harap hubungi admin.');
                }
            });
            target_delete = null;
        }
        var state_undo = false;
        target = $(this);
        target_delete = $(this).closest('tr');
        target_delete.hide();
        $.toast({
            text: 'Terhapus | <a id="undo_delete" href="#"><i class="fa fa-undo fa-sm mt-2"></i> Batal</a>',
            textAlign: 'right', 
            hideAfter: 4000,
            loader: false,
            stack: false,
            position: 'bottom-right',
            allowToastClose: false,
            afterHidden: function () {
                if(!state_undo){
                    $.ajax({
                        url: '/admin/hapus_user/'+target.closest('td').attr('id'),
                        type: 'DELETE',
                        success: function(data) {
                            generalAlert(data);
                            target_delete.remove()
                        },
                        error: function (jXHR, textStatus, errorThrown) {
                            generalAlert('Jaringan dalam gangguan. Harap hubungi admin.');
                        }
                    });
                    target_delete = null;
                }
            }
        })
        $('#undo_delete').click(function(){
            row_to_delete = null;
            state_undo = true;
            target_delete.show();
            $.toast().reset('all');
        })
    });


    //init bulan
    var current_month = new Date().getMonth()+1;
    $('#bulan_st_modal option:eq('+current_month+')').prop('selected', true);

    $('#tbl_riwayat').DataTable({
        aaSorting: [],
        rowReorder: {
            enable: false
        },
        createdRow: function( row, data, dataIndex ) {
            $( row ).find('td:eq(0)').attr('class', 'text-center');
            $( row ).find('td:eq(1)').attr('class', 'text-center');
        }
    })

    moment.locale('id');

    $('#riwayat-lower_ts, #riwayat-upper_ts').datetimepicker({
        locale: 'id',
        format: 'D MMMM YYYY',
        useCurrent: false,
        widgetPositioning: {
            horizontal: 'left',
            vertical: 'bottom'
        }
    });

    var opts = {
          lines: 13 // The number of lines to draw
        , length: 28 // The length of each line
        , width: 14 // The line thickness
        , radius: 42 // The radius of the inner circle
        , scale: 0.25 // Scales overall size of the spinner
        , corners: 1 // Corner roundness (0..1)
        , color: '#000' // #rgb or #rrggbb or array of colors
        , opacity: 0.25 // Opacity of the lines
        , rotate: 0 // The rotation offset
        , direction: 1 // 1: clockwise, -1: counterclockwise
        , speed: 1 // Rounds per second
        , trail: 60 // Afterglow percentage
        , fps: 20 // Frames per second when using setTimeout() as a fallback for CSS
        , zIndex: 2e9 // The z-index (defaults to 2000000000)
        , className: 'spinner' // The CSS class to assign to the spinner
        , top: '50%' // Top position relative to parent
        , left: '50%' // Left position relative to parent
        , shadow: false // Whether to render a shadow
        , hwaccel: false // Whether to use hardware acceleration
        , position: 'absolute' // Element positioning
    }

    var target = document.getElementById('riwayat-user');
    var spinner = new Spinner(opts);

    var current_id;
    $('.track').click(function(){
        $('#riwayat-user').modal('show');
        spinner.spin(target);
        $('#tbl_riwayat').DataTable().clear().draw(false);
        var syarat = {};
        syarat._id = $(this).closest('td').attr('id');
        current_id = syarat._id;
        syarat.month = $('#bulan_st_modal').val();
        socket.emit('list_user_acts', syarat, function (data) {
            _.each(data, function(row, index, list){
                $('#tbl_riwayat').DataTable().row.add( [index+1, moment.unix(row.timestamp/1000).format("HH:mm:ss DD MMMM YYYY"), row.label] );
            })
            $('#tbl_riwayat').DataTable().draw(false);
            spinner.stop();
        });
    });
        
    $('#bulan_st_modal').change(function(){
        if(!$('#tampil-riwayat-by-month').is(':checked')) return;
        spinner.spin(target);
        $('#tbl_riwayat').DataTable().clear().draw(false);
        var syarat = {};
        syarat._id = current_id;
        syarat.month = $('#bulan_st_modal').val();
        if(syarat.month == 'none') return;
        socket.emit('list_user_acts', syarat, function (data) {
            _.each(data, function(row, index, list){
                $('#tbl_riwayat').DataTable().row.add( [index+1, moment.unix(row.timestamp/1000).format("HH:mm:ss D MMMM YYYY"), row.label] );
            })
            $('#tbl_riwayat').DataTable().draw(false);
            spinner.stop();
        });
    });

    $('#riwayat-lower_ts, #riwayat-upper_ts').on('dp.change', function(e){
        if($('#tampil-riwayat-by-range').is(':checked')){
            if($('#riwayat-lower_ts').val() == '' || $('#riwayat-upper_ts').val() == '') return;
            $('#tbl_riwayat').DataTable().clear().draw(false);
            var syarat = {};
            syarat._id = current_id;
            syarat.lower_ts = $('#riwayat-lower_ts').data('DateTimePicker').date().unix()*1000;
            syarat.upper_ts = $('#riwayat-upper_ts').data('DateTimePicker').date().unix()*1000 + 86399000;
            socket.emit('list_user_acts', syarat, function (data) {
                _.each(data, function(row, index, list){
                    $('#tbl_riwayat').DataTable().row.add( [index+1, moment.unix(row.timestamp/1000).format("HH:mm:ss D MMMM YYYY"), row.label] );
                })
                $('#tbl_riwayat').DataTable().draw(false);
            });
        }
    });

    $("input[name='tampil_riwayat']").change(function(e){
        if ($(this).val() == '0'){
            if($('#riwayat-lower_ts').val() == '' || $('#riwayat-upper_ts').val() == '') return;
            $('#tbl_riwayat').DataTable().clear().draw(false);
            var syarat = {};
            syarat._id = current_id;
            syarat.lower_ts = ($('#riwayat-lower_ts').data('DateTimePicker').date().unix() - $('#riwayat-lower_ts').data('DateTimePicker').date().unix()% 86400-25200)*1000;
            syarat.upper_ts = $('#riwayat-upper_ts').data('DateTimePicker').date().unix()*1000 + 86399000;
            socket.emit('list_user_acts', syarat, function (data) {
                _.each(data, function(row, index, list){
                    $('#tbl_riwayat').DataTable().row.add( [index+1, moment.unix(row.timestamp/1000).format("HH:mm:ss D MMMM YYYY"), row.label] );
                })
                $('#tbl_riwayat').DataTable().draw(false);
            })
        } else {
            $('#tbl_riwayat').DataTable().clear().draw(false);
            var syarat = {};
            syarat._id = current_id;
            syarat.month = $('#bulan_st_modal').val();
            if(syarat.month == 'none') return;
            socket.emit('list_user_acts', syarat, function (data) {
                _.each(data, function(row, index, list){
                    $('#tbl_riwayat').DataTable().row.add( [index+1, moment.unix(row.timestamp/1000).format("HH:mm:ss D MMMM YYYY"), row.label] );
                })
                $('#tbl_riwayat').DataTable().draw(false);
            });
        }
    })

    //tooltip utk pass edit
    $('#password_edit').tooltip({
        placement: "right"
    });

    function generalAlert(message){
        $.toast({
            text: message,
            textAlign: 'left', 
            hideAfter: 4000,
            loader: false,
            position: 'bottom-right'
        })
    }
</script>