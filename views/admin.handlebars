                                            <td>{{ip_address}}</td>
                                            <td>{{last_login_time}}</td>
                                            <td id="{{_id}}" class="text-center">
                                                <button type="button" class="edit" data-toggle="modal" data-target="#editModal"><i class="icon-pencil"></i></button>
                                                <button type="button" class="del"><i class="icon-user-unfollow"></i></button>
                                                <button type="button" class="track"><i class="fa fa-history fa-lg"></i></button>
                                            </td>
                                        </tr>
                                    {{/each}}  
                                    </tbody>
                                </table>
                            </div>
                        </div> 
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/.row-->
</div>

